<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192bf2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        card_view:cardBackgroundColor="@color/colorLetter">

        <LinearLayout
            android:id="@+id/linear_layoutD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLetter"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_photo_listDrink"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_menu_profile"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_name_listDrink"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="Nombre Bebida"/>

            <TextView
                android:id="@+id/id_price_listDrink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Plato"/>
        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>